---
const navItems = [
  { title: "首页", href: "/" },
  { title: "收录提交", href: "/submit" }
];
---

<header class="header">
  <div class="header-content">
    <nav class="nav">
      {navItems.map(item => (
        <a 
          href={item.href} 
          class="nav-link"
          aria-current={Astro.url.pathname === item.href ? "page" : undefined}
        >
          {item.title}
        </a>
      ))}
    </nav>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    right: 0;
    left: 240px; /* 侧边栏宽度 */
    height: 60px;
    background: white;
    border-bottom: 1px solid #eaeaea;
    z-index: 100;
  }

  .header-content {
    max-width: 1200px;
    margin: 0 auto;
    height: 100%;
    padding: 0 2rem;
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }

  .nav {
    display: flex;
    gap: 1.5rem;
  }

  .nav-link {
    color: #666;
    text-decoration: none;
    font-size: 0.95rem;
    padding: 0.5rem 0;
    transition: color 0.3s ease;
    position: relative;
  }

  .nav-link:hover {
    color: #2937f0;
  }

  .nav-link[aria-current="page"] {
    color: #2937f0;
  }

  .nav-link[aria-current="page"]::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: #2937f0;
    border-radius: 2px;
  }

  @media (max-width: 768px) {
    .header {
      left: 0;
    }
  }
</style> 